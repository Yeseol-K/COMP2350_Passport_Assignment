<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3">
        <img src="/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <style>
        #error {
          color: rgb(235, 64, 64);
          font-weight: bold;
        }
        #or {
          font-size: large;
          font-weight: bold;
          margin: 10px 0;
        }
      </style>
      <div id="error">
        <% if (errorMsg) { %>
          <%= errorMsg[errorMsg.length - 1] %>
        <% } %>
      </div>
      <h2>Login</h2>
      <form action="/auth/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
        <p id="or">OR</p>
        <button type="submit" class="btn btn-primary btn-block" style="background-color: rgb(80, 80, 80); color: white;">
          <a href="/auth/login/github" style="text-decoration: none; color: inherit;">Login with GitHub</a>
        </button>
      <p class="mt-4">New User? <a href="/auth/register">Register</a></p>
      <p>Forgot Password? <a href="/auth/forgot">Reset</a></p>
    </div>
  </div>
</div>
